<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"

    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/profile_block"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"


                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"

                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/edit_text_background"

                    android:text="Fedda95"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_name"

                    android:layout_width="80dp"
                    android:layout_height="80dp"

                    android:layout_marginTop="15dp"

                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fedda"
                    app:civ_border_color="#fff"
                    app:civ_border_width="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/backgroun_gradient"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/chat_link"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_settings_yellow_24dp"
                        android:scaleType="centerCrop" />


                    <TextView
                        android:id="@+id/pair"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignTop="@+id/chat"
                        android:layout_marginLeft="8dp"
                        android:layout_toEndOf="@id/chat"
                        android:layout_toRightOf="@id/chat"
                        android:background="@drawable/edit_text_background"
                        android:padding="4dp"
                        android:text="Pair"
                        android:textColor="#ff0"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="50dp"
                        android:layout_height="45dp"

                        android:layout_alignBottom="@+id/chat"
                        android:layout_toEndOf="@+id/pair"
                        android:layout_toRightOf="@+id/pair"
                        android:background="@drawable/ic_notification1"
                        android:padding="4dp"
                        android:textColor="#ff0"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Title"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/profile_block"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/best_played"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Most played"
                    android:textColor="#ff0"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="Play list"
                    android:textColor="#ff0"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/friends"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Friends"
                    android:textColor="#ff0"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/launch_upload_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@id/chat"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text_background"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="Upload"
                    android:textColor="#ff0"
                    android:textSize="16sp"
                    android:textStyle="bold"

                    />


            </LinearLayout>

            <TextView
                android:id="@+id/about_me"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/Title"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:padding="4dp"
                android:text="About me"
                android:textColor="#ff0"
                android:textSize="16sp"
                android:textStyle="bold" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#f0f0ff" />


            <TextView
                android:id="@+id/about_me-details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_me"
                android:layout_marginLeft="@dimen/fab_margin"

                android:layout_marginTop="5dp"

                android:text="@string/about_vybz"
                android:textColor="#ff0"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/friends_heading"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/about_me-details"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:padding="4dp"
                android:text="Friends"
                android:textColor="#ff0"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/friends_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/friends_heading"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/CLICK_TO_GET_DETAIL"
                    android:textColor="#ff0"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:layout_below="@id/instructions"
                    android:layout_width="match_parent"
                    android:id="@+id/Gridview"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>


            <TextView
                android:id="@+id/uploads_heading"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/friends_container"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:padding="4dp"
                android:text="Uploads"
                android:textColor="#ff0"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/uploads_heading"

                android:layout_marginBottom="31dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"

                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_public_browse_24dp"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:padding="7dp"
                        android:text="Browse"
                        android:textColor="#ff0"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"


                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_videocam_white_24dp"
                        app:civ_border_color="#ffffff"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"

                        android:layout_marginTop="2dp"

                        android:padding="7dp"
                        android:text="Video"
                        android:textColor="#ff0"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_videocam_white_24dp"

                        android:gravity="center"
                        android:scaleType="centerCrop"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"

                        android:layout_marginTop="2dp"

                        android:padding="7dp"
                        android:text="Video"
                        android:textColor="#ff0"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/uploads_heading"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/video2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/uploads_heading"

                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@id/profile_image2"

                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_email_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"

                        android:layout_marginTop="2dp"

                        android:padding="7dp"
                        android:text="Email"
                        android:textColor="#ff0"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/uploads_heading"
                    android:layout_gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_chat_bubble_white_24dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:layout_marginTop="2dp"

                        android:padding="7dp"
                        android:text="Text"
                        android:textColor="#ff0"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                    />


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>