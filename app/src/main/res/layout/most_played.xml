<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f00"
        android:textSize="80sp"
        android:gravity="center"
        android:text="MOST PLAYED" />

    <LinearLayout

        android:layout_below="@id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="31dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_public_browse_24dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:padding="7dp"
                android:text="Browse"
                android:textColor="#ff0"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_label"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/section_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:layout_toRightOf="@id/profile_image"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_videocam_white_24dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"

                android:layout_marginTop="2dp"

                android:padding="7dp"
                android:text="Video"
                android:textColor="#ff0"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_label"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/section_label"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"

                android:background="@drawable/ic_videocam_white_24dp"
                android:scaleType="centerCrop"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"

                android:layout_marginTop="2dp"

                android:padding="7dp"
                android:text="Video"
                android:textColor="#ff0"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_label"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/video2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/section_label"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/profile_image2"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_email_white_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"

                android:layout_marginTop="2dp"

                android:padding="7dp"
                android:text="Email"
                android:textColor="#ff0"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_label"
            android:layout_gravity="center"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/chat_link"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_chat_bubble_white_24dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="2dp"

                android:padding="7dp"
                android:text="Text"
                android:textColor="#ff0"
                android:textSize="13sp"
                android:textStyle="bold" />
            />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>